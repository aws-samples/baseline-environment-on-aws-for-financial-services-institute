{
  "compilerOptions": {
    //"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo", // TODO: update tsc
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    //"erasableSyntaxOnly": true, // TODO: update tsc
    "noFallthroughCasesInSwitch": true
    //"noUncheckedSideEffectImports": true // TODO: update tsc
  },
  "include": ["vite.config.ts"]
}
